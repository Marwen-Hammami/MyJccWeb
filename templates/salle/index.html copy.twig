{% extends 'baseFrontOffice.html.twig' %}

{% block title %}Salles{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('css/salles.css') }}">
{% endblock %}

{% block body %}
<br/><br/>
    <div class="container">
        <h1 class="text-center mt-5 mb-3"></h1>
        <div class="row">
            {% for salle in salles %}
                <div class="col-md-4 mb-3">
                    <div class="card" onclick="location.href='{{ path('app_salle_show_user', {'idSalle': salle.idSalle}) }}'">
                        <div class="card-body">
                            <h5 class="card-title">{{ salle.nomsalle }}</h5>
                            <p class="card-text">{{ salle.adresse }}</p>
                            <p class="card-text">{{ salle.numtelSalle }}</p>
                            <p class="card-text">rating: {{ salle.avis }} *</p>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-md-12">
                    <p>aucune salle trouv√©e</p>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="row justify-content-center mb-3">
    <div class="col-md-1 mb-3 ml-auto">
        <button class="btn btn-primary btn-block" style="background-color: #8b0000;" onclick="openMap()">Map</button>
    </div>
</div>

<script>
function openMap() {
    var url = "/map";
    var windowName = "map";
    var features = "width=600,height=400,resizable,scrollbars";
    window.open(url, windowName, features);
}
</script>









{% endblock %}
