{% extends 'base.html.twig' %}

{% block title %}Logs index{% endblock %}

{% block body %}
    <h1>Logs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for log in logs %}
            <tr>
                <td>{{ log.id }}</td>
                <td>
                    <a href="{{ path('app_logs_show', {'id': log.id}) }}">show</a>
                    <a href="{{ path('app_logs_edit', {'id': log.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_logs_new') }}">Create new</a>
{% endblock %}
