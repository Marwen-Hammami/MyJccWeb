{% extends 'base.html.twig' %}

{% block title %}Liste Galeries
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-body">
					<h4 class="card-title">Liste des Galeries</h4>
					<p class="card-title-desc">Liste des galeries des photographes de l'application MyJcc.</p>

					<table id="datatable-buttons" class="table table-bordered dt-responsive nowrap w-100">
						<thead>
							<tr>
								<th>IdGalerie</th>
								<th>Couleurhtml</th>
								<th>Nom</th>
								<th>Description</th>
								<th>actions</th>
							</tr>
						</thead>
						<tbody>
							{% for galerie in galeries %}
								<tr>
									<td>{{ galerie.idGalerie }}</td>
									<td style="background-color: {{ galerie.couleurhtml }};">
										<span style="background-color: #ffffff;border-radius: 10px; padding: 5px 10px;">{{ galerie.couleurhtml }}</span>
									</td>
									<td>{{ galerie.nom }}</td>
									<td>{{ galerie.description }}</td>
									<td>
										<a href="{{ path('app_galerie_admin_show', {'idGalerie': galerie.idGalerie}) }}">show</a>
										{# <a href="{{ path('app_galerie_edit', {'idGalerie': galerie.idGalerie}) }}">edit</a> #}
									</td>
								</tr>
							{% else %}
								<tr>
									<td colspan="5">no records found</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>

	{# <a href="{{ path('app_galerie_admin_new') }}">Create new</a> #}
{% endblock %}