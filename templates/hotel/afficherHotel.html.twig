{% extends 'base.html.twig' %}

{% block title %}{{ hotel.libelle }}{% endblock %}

{% block body %}
    <h1>{{ hotel.libelle }}</h1>
    {{ form_start(form) }}
    <table>
        <tr>
            <td>{{ form_label(form.adresse) }}</td>
            <td>{{ form_widget(form.adresse) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.nbreChambres) }}</td>
            <td>{{ form_widget(form.nbreChambres) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.telephone) }}</td>
            <td>{{ form_widget(form.telephone) }}</td>
        </tr>
        <tr>
            <td>{{ form_label(form.description) }}</td>
            <td>{{ form_widget(form.description) }}</td>
        </tr>
    </table>
    {{ form_end(form) }}
{% endblock %}
