{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>IdFilm</th>
                <td>{{ film.idFilm }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ film.titre }}</td>
            </tr>
            <tr>
                <th>Daterealisation</th>
                <td>{{ film.daterealisation }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ film.genre }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ film.resume }}</td>
            </tr>
            <tr>
                <th>Duree</th>
                <td>{{ film.duree }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ film.prix }}</td>
            </tr>
            <tr>
                <th>IdProducteur</th>
                <td>{{ film.idProducteur }}</td>
            </tr>
            <tr>
                <th>Acteur</th>
                <td>{{ film.acteur }}</td>
            </tr>
            <tr>
                <th>Filmimage</th>
                <td><img src="{{ asset(film.filmimage) }}" alt="filmimage"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_film_index') }}">back to list</a>

    <a href="{{ path('app_film_edit', {'idFilm': film.idFilm}) }}">edit</a>

    {{ include('film/_delete_form.html.twig') }}
{% endblock %}
