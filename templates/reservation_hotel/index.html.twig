{% extends 'baseFrontOffice.html.twig' %}

{% block body %}
    <h1>Mes Réservations</h1>
    <div class="row">
     {% for reservation in reservations %}
        <div class="card text-white bg-dark mb-3" style="max-width: 18rem;">
         <div class="card-header">{{ reservation.idHotel.libelle }}</div>
            <div class="card-body">
                <p class="card-text">Date de début: {{ reservation.dateDebut|date('d/m/Y') }}</p>
                <p class="card-text">Date de fin: {{ reservation.dateFin|date('d/m/Y') }}</p>
                <p class="card-text">Tarif total: {{ reservation.tariftotale }}€</p>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}


