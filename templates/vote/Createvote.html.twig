{% extends "base.html.twig" %}
{% block body %}
    <div style="display: flex ; align-items: center;justify-content: center ; margin-top: 100px; padding: 10px;">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Vote</h5>

              <!-- General Form Elements -->
              {{ form_start(form,{attr:{novalidate:'novalidate'}})}}
                <div class="row mb-3">
                    <label for="inputNumber" class="col-sm-4 col-form-label">Rate</label>
                    <div class="col-sm-10">
                         {{ form_widget(form.valeur, {'attr': {'class': 'form-control'}}) }}
                         
                    </div>
                    {{ form_errors(form.valeur, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="row mb-3">
                  <label class="col-sm-4 col-form-label">User</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.idUser, {'attr': {'class': 'form-select', 'aria-label': 'Default select example'}}) }}
                    
                        {% for v in vote %}
                            <option value="{{v.idUser.nom}}"> {{v.idUser.prenom}} ~ ' ' ~ {{v.idUser.nom}}</option>
                        {% endfor %}
                  </div>
                  {{ form_errors(form.idUser, {'attr': {'class': 'text-danger'}}) }}
                </div>

                <div class="row mb-3">
                  <label class="col-sm-4 col-form-label">Film</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.idFilm, {'attr': {'class': 'form-select', 'aria-label': 'Default select example'}}) }}
                    
                        {% for v in vote %}
                            <option value="{{v.idFilm.titre}}"> {{v.idFilm.titre}}</option>
                        {% endfor %}
                  </div>
                  {{ form_errors(form.idFilm, {'attr': {'class': 'text-danger'}}) }}
                </div>
                
                <div class="row mb-3">
                  <label for="inputPassword" class="col-sm-4 col-form-label">Commentaire</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.commentaire, {'attr': {'class': 'form-control', 'style': 'height: 100px'}}) }}
                    
                  </div>
                  {{ form_errors(form.commentaire, {'attr': {'class': 'text-danger'}}) }}
                </div>

                
                <div class="row mb-3">
                    <legend class="col-form-label col-sm-4 pt-0">Vote</legend>
                    <div class="col-sm-10">
                         <div class="form-check">
                             {{ form_widget(form.voteFilm, {'attr': {'class': 'form-check-input', 'type': 'checkbox', 'id': 'gridCheck1'}}) }}
                             
                            <label class="form-check-label" for="gridCheck1">
                                j'adore
                            </label>
                         </div>
                         {{ form_errors(form.voteFilm, {'attr': {'class': 'text-danger'}}) }}
                    </div>
                </div>  

                

                



                <div class="row mb-3">
                  <label class="col-sm-4 col-form-label">enregistrer</label>
                  <div class="col-sm-10">
                  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                  </div>
                </div>
                <div class="row mb-3">
                  <label class="col-sm-4 col-form-label">annuler</label>
                  <div class="col-sm-10">
                  {{ form_widget(form.cancel, {'attr': {'class': 'btn btn-primary'}}) }}
                  </div>
                </div>

              {{ form_end(form)}}

            </div>
          </div>

        </div>
{% endblock %}