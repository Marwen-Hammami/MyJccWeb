{% extends 'base.html.twig' %}

{% block title %}Liste des prix{% endblock %}

{% block body %}

    <div>
    <a href="{{ path('create_prix') }}"><i class="ri-arrow-left-circle-fill" style="font-size: 50px;"></i></a>
    </div>
    <div>
        <h1>Liste des prix</h1>
    </div>
    <div>
        <table class="table table-editable table-nowrap align-middle table-edits">
            <thead>
                <tr>
                    <th>Film</th>
                    <th>Prix</th>
                    <th>Modifier</th>
                    <th>Supprimer</th>
                </tr>
            </thead>
            <tbody>
                {% for prix in list %}
                    <tr data-id="{{ prix.idPrix }}">
                        <td data-field="film">{{ prix.idFilm.Titre }}</td>
                        <td data-field="commentaire">{{ prix.typeprix }}</td>
                        
                        <td style="width: 100px">
                            <a class="btn btn-outline-primary btn-sm edit" title="Edit"  href="{{ path('update_prix', {'id': prix.idPrix}) }}" >
                                <i class="fas fa-pencil-alt"></i>  
                            </a>
                        </td>
                        <td style="width: 100px">
                            <a class="btn btn-outline-secondary btn-sm delete" title="Delete"  href="{{ path('prix_delete', {'id': prix.idPrix}) }}" >
                                <i class="fas fa-trash"></i>    
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
