{% extends "base.html.twig" %}
{% block body %}
    <div style="display: flex ; align-items: center;justify-content: center ; margin-top: 100px; padding: 10px;">

          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Prix</h5>

              <!-- General Form Elements -->
              {{ form_start(form)}}

                <div class="row mb-3">
                  <label class="col-sm-4 col-form-label">Film</label>
                  <div class="col-sm-10">
                    {{ form_widget(form.idFilm, {'attr': {'class': 'form-select', 'aria-label': 'Default select example'}}) }}
                        {% for v in prix %}
                            <option value="{{v.idFilm.titre}}"> {{v.idFilm.titre}}</option>
                        {% endfor %}
                  </div>
                    {{ form_errors(form.idFilm, {'attr': {'class': 'text-danger'}}) }}
                </div>


            
                <div class="row mb-3">
                  <label for="inputText" class="col-sm-4 col-form-label">Text</label>
                  <div class="col-sm-10">
                  {{ form_widget(form.typeprix, {'attr': {'class': 'form-control' , 'type': 'text' }}) }}
                  </div>
                  {{ form_errors(form.typeprix, {'attr': {'class': 'text-danger'}}) }}
                </div>

                


<br>
                <div style="display: flex ; align-items: center;justify-content: center ;margin-left: 78px;">
                  <div class="col-sm-10">
                  {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}
                  </div>
                </div>
<br>
                <div style="display: flex ; align-items: center;justify-content: center ;margin-left: 90px;">
                  <div class="col-sm-10">
                  {{ form_widget(form.cancel, {'attr': {'class': 'btn btn-primary'}}) }}
                  </div>
                </div>

              {{ form_end(form)}}

            </div>
          </div>

        </div>
{% endblock %}